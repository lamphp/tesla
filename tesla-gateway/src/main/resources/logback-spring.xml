<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true">
	<property name="logDir" value="${user.dir}/logs/tesla" />
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{50}:%L - %msg%n</pattern>
		</layout>
	</appender>
	<appender name="logfile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${logDir}/gateway.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${logDir}/history/gateway.%d{yyyy-MM-dd}.log.gz
			</FileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{50}:%L - %msg%n</pattern>
		</layout>
	</appender>
	<springProperty scope="context" name="datasourceUrl"
		source="spring.datasource.url" />
	<springProperty scope="context" name="datasourceUserName"
		source="spring.datasource.username" />
	<springProperty scope="context" name="datasourcePassword"
		source="spring.datasource.password" />
	<appender name="database" class="ch.qos.logback.classic.db.DBAppender">
		<connectionSource class="ch.qos.logback.core.db.DataSourceConnectionSource">
			<dataSource class="com.alibaba.druid.pool.DruidDataSource">
				<driverClassName>com.mysql.jdbc.Driver</driverClassName>
				<url>${datasourceUrl}</url>
				<username>${datasourceUserName}</username>
				<password>${datasourcePassword}</password>
			</dataSource>
		</connectionSource>
	</appender>
	<logger name="gatewaytrace">
		<appender-ref ref="database" />
	</logger>
	<root level="INFO">
		<appender-ref ref="logfile" />
		<appender-ref ref="stdout" />
	</root>
</configuration>